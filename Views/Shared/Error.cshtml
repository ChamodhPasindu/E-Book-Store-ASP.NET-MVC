@{
    ViewData["Title"] = "Error";
}

<div class="container mt-5">
    <h2 class="text-danger">Oops! Something went wrong.</h2>
    <p>We encountered an issue while processing your request. Please try again later.</p>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger" role="alert">
            <strong>Error:</strong> @TempData["ErrorMessage"]
        </div>
    }

    <p>If the problem persists, please contact our support team.</p>

    <a asp-controller="Home" asp-action="Index" class="btn btn-primary mt-3">Return to Home</a>
</div>